{
    "python.analysis.extraPaths": [
        "./lib"
    ],
    "explorer.compactFolders": false,
    "editor.rulers": [
        120
    ],
    "editor.bracketPairColorization.enabled": true,
    // Set default indentation of 4 spaces.
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    // Linux shell scripts (sh, bash, zsh, etc.) should be indented using 2 spaces.
    "[shellscript]": {
        "editor.tabSize": 2,
        "files.eol": "\n"
    },
    "python.analysis.typeCheckingMode": "basic",
    "python.terminal.activateEnvironment": false,
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "python.defaultInterpreterPath": "~/miniconda3/envs/evagg/bin/python",
    "files.exclude": {
        "**/__pycache__": true,
        ".mypy_cache": true,
        ".pytest_cache": true
    },
    "files.watcherExclude": {
        "**/target": true
    },
    "mypy-type-checker.ignorePatterns": ["test/**", "test/evagg/**" ],
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "python.testing.pytestArgs": [
        "test"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

}